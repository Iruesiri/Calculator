<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/screenlayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textScreenTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@android:drawable/editbox_background"
            android:gravity="center_vertical|end"
            android:paddingRight="5dp"
            android:text="0"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ce"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="CE"
            android:layout_margin="2dp"
            android:background="#6A6565" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="C"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="DEL"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/divide"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="/"
            android:background="#9C9595" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#9C9595"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/two"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="2"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/three"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="3"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="X"
            android:background="#9C9595" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/four"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="1"
            android:layout_margin="2dp"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/five"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="5"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/six"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="6"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subtract"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="-"
            android:background="#9C9595" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seven"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="7"
            android:layout_margin="2dp"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eight"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="8"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nine"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="9"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="+"
            android:background="#9C9595" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/random"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="RAN"
            android:layout_margin="2dp"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zero"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="0"
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dot"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="."
            android:background="#9C9595" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/equal"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="="
            android:background="#9C9595" />
    </LinearLayout>

</LinearLayout>